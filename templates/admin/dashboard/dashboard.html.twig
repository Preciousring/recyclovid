{% extends '@EasyAdmin/page/content.html.twig' %}
{% block content %}

                    <div class="row">
                        <div class="col-xl-6 col-md-6">
                            <canvas id="chartMaskQty" width="400" height="400"></canvas>

                        </div>
                        <div class="col-xl-6 col-md-6">
                            <canvas id="myChart" width="400" height="400"></canvas>

                        </div>
                    </div>




    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.1.1/dist/chart.min.js"></script>
    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Rouge', 'Bleu', 'Jaune', 'Vert', 'Violet', 'Orange'],
                datasets: [{
                    label: '# example',
                    data: [12, 19, 3, 5, 2, 3],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
    <script>
        var cmt = document.getElementById('chartMaskQty').getContext('2d');
        var myChart = new Chart(cmt, {
            type: 'pie',
            data: {
                labels: {{ aMaskLabels|raw }},
                datasets: [
                    {
                        label: 'Nombre par type de masques',
                        data: {{ aMaskQty }},
                        backgroundColor: ['#2980b9 ', '#229954'],
                    }
                ]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Nombre par type de masques'
                    }
                }
            }
        });
    </script>
{% endblock %}